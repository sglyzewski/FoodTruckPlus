@Model FoodTruckPlus.ViewModels.MapViewModel

@{
    ViewBag.Title = "FoodTruckDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Food Truck Details</h2>
<h2>Map</h2>
<h2>Current Location: @Model.Address</h2>

<head>
    <style>
        #map {
            height: 400px;
            width: 100%;
        }
    </style>
</head>
<body>
    <h3>Map</h3>
    <div id="map"></div>
    <script>
      function initMap() {
        var uluru = {lat: @Model.Latitude, lng: @Model.Longitude};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 4,
          center: uluru
        });
        var marker = new google.maps.Marker({
          position: uluru,
          map: map
        });
      }
    </script>
    <script async defer
            src=@String.Format("https://maps.googleapis.com/maps/api/js?key={0}&callback=initMap", @Model.apiKey)>
    </script>
</body>



